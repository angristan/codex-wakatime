{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "codex-wakatime",
  "version": "1.0.0",
  "description": "WakaTime plugin for OpenAI Codex CLI - Track AI coding activity and time spent",
  "repository": {
    "type": "git",
    "url": "https://github.com/wakatime/codex-wakatime.git"
  },
  "type": "module",
  "main": "dist/index.cjs",
  "types": "dist/index.d.ts",
  "bin": {
    "codex-wakatime": "dist/index.cjs"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "prebuild": "node scripts/generate-version.js",
    "build": "npm run prebuild && esbuild src/index.ts --bundle --platform=node --format=cjs --outfile=dist/index.cjs --banner:js=\"#!/usr/bin/env node\"",
    "typecheck": "tsc --noEmit",
    "lint": "biome lint .",
    "format": "biome format --write .",
    "check": "biome check .",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "codex",
    "openai",
    "wakatime",
    "time-tracking",
    "ai",
    "coding",
    "productivity"
  ],
  "author": "WakaTime",
  "license": "MIT",
  "devDependencies": {
    "@biomejs/biome": "^2.3.10",
    "@types/node": "^22.0.0",
    "@types/which": "^3.0.0",
    "@vitest/coverage-v8": "^4.0.16",
    "esbuild": "^0.25.0",
    "typescript": "^5.0.0",
    "vitest": "^4.0.16"
  },
  "dependencies": {
    "@iarna/toml": "^3.0.0",
    "which": "^4.0.0"
  }
}
